<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <!--Place 관련  -->
  <servlet>
    <servlet-name>addPlace</servlet-name>
    <jsp-file>/api/place/AddPlace.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>addPlace</servlet-name>
    <url-pattern>/api/place/add</url-pattern>
  </servlet-mapping>
  
  
  <!-- User 관련  -->
  
  <servlet>
    <servlet-name>addUser</servlet-name>
    <jsp-file>/api/user/AddUser.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>addUser</servlet-name>
    <url-pattern>/api/user/add</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>loginUser</servlet-name>
    <jsp-file>/api/user/LoginUser.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>loginUser</servlet-name>
    <url-pattern>/api/user/login</url-pattern>
  </servlet-mapping>
  
  
  <!-- AppConfig 관련  -->
   <servlet>
    <servlet-name>appConfig</servlet-name>
    <jsp-file>/api/config/AppConfig.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>appConfig</servlet-name>
    <url-pattern>/api/config/app</url-pattern>
  </servlet-mapping>
  
  <!-- Default Settings -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.js</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.gif</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.jpg</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.png</url-pattern>
  </servlet-mapping>
</web-app>